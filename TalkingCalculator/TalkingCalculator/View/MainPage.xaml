<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:TalkingCalculator"
             mc:Ignorable="d"
             x:Class="TalkingCalculator.MainPage"
             Title = "Calculator - XAML"
             BackgroundColor="#404040"
             Visual="Material">
    
    <ContentPage.BindingContext>
        <local:MainPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="plainButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#eee"/>
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="BorderRadius" Value="0"/>
                <Setter Property="FontSize" Value="40" />
            </Style>
            <Style x:Key="darkerButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#ddd"/>
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="BorderRadius" Value="0"/>
                <Setter Property="FontSize" Value="40" />
            </Style>
            <Style x:Key="orangeButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#E8AD00"/>
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BorderRadius" Value="0"/>
                <Setter Property="FontSize" Value="40" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid x:Name="controlGrid" RowSpacing="1" ColumnSpacing="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="150" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label 
                Text= "{Binding DisplayCalculation}"
                Grid.Row="0" 
                HorizontalTextAlignment="End" 
                VerticalTextAlignment="End" 
                TextColor="White" 
                FontSize="20" 
                Grid.ColumnSpan="4" />
            <Label
                x:Name = "DisplayWindow"
                Text= "{Binding DisplayNumber}"
                Grid.Row="1" 
                HorizontalTextAlignment="End" 
                VerticalTextAlignment="End" 
                TextColor="White" 
                FontSize="50" 
                Grid.ColumnSpan="4" />
            <Button 
                Text = "C" 
                Grid.Row="2"
                Grid.ColumnSpan="1"
                Grid.Column="0"
                Style="{StaticResource darkerButton}"
                Clicked="ButtonClearAll_Clicked"/>
            <Button 
                Text = "T"
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource darkerButton}"
                Clicked="ButtonTalk_Clicked"/>
            <Button 
                Text = "G"
                Grid.Row="2"
                Grid.Column="2"
                Style="{StaticResource darkerButton}"
                Clicked="ButtonSettings_ClickedAsync"/>
            <Button 
                Text = "÷" 
                Grid.Row="2" 
                Grid.Column="3" 
                Style="{StaticResource orangeButton}"
                Clicked="ButtonOperator_Clicked" />
            <Button 
                Text = "7" 
                Grid.Row="3" 
                Grid.Column="0" 
                Style="{StaticResource plainButton}"
                Clicked="ButtonNumber_Clicked"/>
            <Button 
                Text = "8" 
                Grid.Row="3" 
                Grid.Column="1" 
                Style="{StaticResource plainButton}"
                Clicked="ButtonNumber_Clicked"/>
            <Button 
                Text = "9" 
                Grid.Row="3" 
                Grid.Column="2" 
                Style="{StaticResource plainButton}"
                Clicked="ButtonNumber_Clicked"/>
            <Button 
                Text = "×" 
                Grid.Row="3" 
                Grid.Column="3" 
                Style="{StaticResource orangeButton}"
                Clicked="ButtonOperator_Clicked" />
            <Button 
                Text = "4" 
                Grid.Row="4" 
                Grid.Column="0" 
                Style="{StaticResource plainButton}"
                Clicked="ButtonNumber_Clicked" />
            <Button 
                Text = "5"
                Grid.Row="4"
                Grid.Column="1"
                Style="{StaticResource plainButton}" 
                Clicked="ButtonNumber_Clicked"/>
            <Button 
                Text = "6"
                Grid.Row="4" 
                Grid.Column="2" 
                Style="{StaticResource plainButton}" 
                Clicked="ButtonNumber_Clicked"/>
            <Button 
                Text = "-" 
                Grid.Row="4" 
                Grid.Column="3" 
                Style="{StaticResource orangeButton}"
                Clicked="ButtonOperator_Clicked"/>
            <Button 
                Text = "1" 
                Grid.Row="5" 
                Grid.Column="0" 
                Style="{StaticResource plainButton}"
                Clicked="ButtonNumber_Clicked" />
            <Button 
                Text = "2" 
                Grid.Row="5" 
                Grid.Column="1" 
                Style="{StaticResource plainButton}" 
                Clicked="ButtonNumber_Clicked" />
            <Button 
                Text = "3" 
                Grid.Row="5" 
                Grid.Column="2" 
                Style="{StaticResource plainButton}"
                Clicked="ButtonNumber_Clicked" />
            <Button 
                Text = "+" 
                Grid.Row="5" 
                Grid.Column="3" 
                Style="{StaticResource orangeButton}"
                Clicked="ButtonOperator_Clicked" />
            <Button 
                Text = "0" 
                Grid.ColumnSpan="2" 
                Grid.Row="6" 
                Grid.Column="0" 
                Style="{StaticResource plainButton}" 
                Clicked="ButtonNumber_Clicked"/>
            <Button 
                Text = "." 
                Grid.Row="6" 
                Grid.Column="2" 
                Style="{StaticResource plainButton}" 
                Clicked="ButtonDecimalPoint_Clicked"/>
            <Button 
                Text = "=" 
                Grid.Row="6" 
                Grid.Column="3" 
                Style="{StaticResource orangeButton}"
                Clicked="ButtonCalculateResult_Clicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
